{% extends './_/layout/extend/noStickyNav' %} 
{% set detail = entry.jobDetail %}

{% block header %}
  <div class="wrapper integrations-details-wrapper">
    <div class="integration-name-wrapper">
      <h6 class="subheading">Karriere</h6>
    </div>
    <div class="integration-heading-wrapper">
      <h1 class="integrations-hero-heading template">{{entry.title}}</h1>
    </div>
    <div class="integration-detail-about">{{entry.postShortText}}</div>
    <div class="integration-details-bottom">
      <div class="job-dot-details">
        <div class="job-detail-text">{{detail.location}}</div>
        <div class="job-dot"></div>
        <div class="job-detail-text">{{detail.duration}}</div>
        <div class="job-dot"></div>
        <div class="job-detail-text">{{detail.experience}}</div>
      </div>
      <div class="job-salary-range">
        <div class="job-detail-text">{{detail.startDate | date("M d, Y") }}</div>
      </div>
      {% if detail.button != '' %}
      <div class="integration-button-wrapper">
        <a href="{{detail.button}}" target="_blank" class="integration-button top w-inline-block"
          ><img src="{{siteUrl}}assets/images/Icon-3.svg" loading="lazy" width="13" alt="" class="integration-card-link-icon details-page" />
          <div>{{detail.button.getCustomText()}}</div>
        </a>
      </div>
      {% endif %}
    </div>
  </div>
{% endblock %}

{% block content %}
<div class="integrations-detail-content wf-section">
  <div class="integartions-detail-wrapper">
    <div data-w-id="e21e9b13-eb55-a469-85da-878c1db6079a" class="sticky-detail-section">
      <div class="progress-bar">
        <div class="progress-bar-grey-line">
          <div class="progress-bar-blue-line"></div>
        </div>
        {% for block in entry.contentPost.all() %}
          {% if block.type == 'items' %}
            <a href="#{{block.titleText}}" class="progress-bar-item w-inline-block">
              <div>{{block.titleText}}</div>
            </a>
          {% endif %}
        {% endfor%}
      </div>
      <div class="detail-rich-text">
        <div class="integration-content w-richtext">
          {% for block in entry.contentPost.all() %}
            {% if block.type == 'items' %}
              <h4 id="{{block.titleText}}">{{block.titleText}}</h4>
              {{block.descriptions|raw}}
            {% endif %}
          {% endfor%}  
        </div>
        {% if entry.button != '' %}
          <a href="{{entry.button}}" target="_blank" class="integration-button w-inline-block"><img src="{{siteUrl}}assets/images/Icon-3.svg" loading="lazy" width="13" alt="" class="integration-card-link-icon details-page">
            <div>{{entry.button.getCustomText()}}</div>
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% include('_/components/perksSection') %}
{% include('_/components/ctaSection') %}

{% endblock %}
